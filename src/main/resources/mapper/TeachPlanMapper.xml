<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="top.cllccc.exam.dao.TeachPlanDao">
    <!--查询 -->
    <!--根据课程编号查询-->
    <select id="getTeachPlanByCourseNo" resultType="top.cllccc.exam.domain.TeachPlan">
        select * from teachplan where course_no = #{courseNo}
    </select>
    <!--根据教师编号查询-->
    <select id="getTeachPlanByTeacherNo" resultType="top.cllccc.exam.domain.TeachPlan">
        select * from teachplan where teacher_no = #{teacherNo}
    </select>
    <select id="getAllTeachPlan" resultType="top.cllccc.exam.domain.TeachPlan">
        select * from teachplan
    </select>
    <!-- 增加 -->
    <insert id="addTeachPlan">
        INSERT INTO teachplan(teacher_no,course_no)
        VALUES(#{teacherNo},#{courseNo})
    </insert>
    <!-- 删除 -->
    <delete id="deleteTeachPlan">
        DELETE FROM teachplan WHERE teacher_no=#{teacherNo} and course_no=#{courseNo}
    </delete>
</mapper>